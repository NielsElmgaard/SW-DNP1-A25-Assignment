<div>
    <h4>Comments (@Comments.Count())</h4>
    @if (Comments.Any())
    {
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Comment</th>
                <th>Author</th>
                <th class="text-center">Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var comment in Comments)
            {
                <CommentListItem Comment="comment" CurrentUserId="CurrentUserId" OnDelete="OnDelete"/>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>
            <em>No comments yet...</em>
        </p>
    }
</div>

@code {
    [Parameter] public IEnumerable<CommentDTO> Comments { get; set; } = new List<CommentDTO>();
    [Parameter] public int CurrentUserId { get; set; }
    [Parameter] public EventCallback<int> OnDelete { get; set; }
}