@page "/"
@inject NavigationManager NavMgr
@inject AuthenticationStateProvider AuthProvider
<PageTitle>Home</PageTitle>

<h1>Reddit Clone</h1>

<AuthorizeView>
    <Authorized>
        <h3>Hello, @context.User.Identity?.Name</h3>
        <audio id="autoPlayAudio" controls autoplay loop muted
               src="@MusicSource">
            Your browser does not support the audio element.
        </audio>
    </Authorized>
    <NotAuthorized>
        lol you are not logged in!
    </NotAuthorized>
</AuthorizeView>
<AuthorizeView Policy="OG">
    <Authorized>
        <div class="d-flex flex-column align-items-center mt-5">
            <img width="150"
                 src="https://media.tenor.com/DFnKoaU_xBQAAAAM/snoop-dogg-dance.gif"
                 alt="THE REAL O.G.!"/>
        </div>
    </Authorized>

</AuthorizeView>
Here you can browse interesting posts.
<button @onclick='() => NavMgr.NavigateTo("login")'>go to login</button>

@code
{
    private string MusicSource = "036-1860165-Pierce Murphy-Athens.mp3";
}
